extends layout

append stylesheets
	link(rel='stylesheet' href="../../css/style.css")

block content
	.container
		.row
			.col-xs-12.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3
				form(action="/login", method="post", id="loginForm")
					h2 Login
					.colorgraph
					.blank
					.form-group
						.input-group
							span.input-group-addon
								i.glyphicon.glyphicon-user
							input.form-control.input-lg(type="text" name="username" placeholder="Username")#username
					.form-group
						.input-group
							span.input-group-addon
								i.glyphicon.glyphicon-lock
							input.form-control.input-lg(type="password" name="password" placeholder="Password")#password
					.colorgraph
					.blank
					.row
						.col-xs-12.col-md-6
							input(type="submit", value="Login").btn.btn-primary.btn-block.btn-lg
							br
						.col-xs-12.col-md-6
							a(href="/").btn.btn-danger.btn-block.btn-lg Cancel
				hr
				a(href="/signup") Direct to Signup Page

append footer
	script(src="../../js/jquery.validate.min.js")
	script(src="../../js/userinfo.js")