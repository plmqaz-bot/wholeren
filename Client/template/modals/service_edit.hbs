<div class="bbm-modal__topbar">
    <h3 class="bbm-modal__title">New Contract</h3>
</div>
<div class="bbm-modal__section">
<form>
<!-- Should contain ContractCategory, Country, Degree, Lead, LeadLevel, PaymentOption, Status as select input. Service, and User as multiple selection. contract is main. -->
 <fieldset>

        <div class="form-group">
            <label >First Name</label>
            <label >{{contract/client/firstName}}</label>
            <p></p>
        </div>
        <div class="form-group">
            <label >Last Name</label>
            <label >{{contract/client/lastName}}</label>
            <p></p>
        </div>
        <div class="form-group">
            <label >Chinese Name</label>
            <label >{{contract/client/chineseName}}</label>
            <p></p>
        </div>
        <div class="form-group">
            <label >Email</label>
            <label >{{contract/client/primaryEmail}}</label>
            <p></p>
        </div>
</fieldset>
 <fieldset>
        <div class="form-group">
            <label >录取</label>
            <select id="application.success" >
                <option value="false">NO</option>
                <option value="true">YES</option>
        </select>
        <p></p>
        </div>
        <div class="form-group">
            <label >新开发？</label>
            <select id="application.newDev"   >
                <option value="false">NO</option>
                <option value="true">YES</option>
        </select>
        <p></p>
        </div>
        <div class="form-group">
            <label >所申学校</label>
            <input id="application.collegeName"  type="text" value="{{collegeName}}" />
            <p></p>
        </div>
         <div class="form-group">
            <label >申请入读学期</label>
            <input id="application.appliedSemester"  type="text" value="{{appliedSemester}}" />
            <p></p>
        </div>        
</fieldset>
<fieldset>
    <div class="form-group">
        <label>writer</label>
        <select id="application.writer">
            <option></option>
        </select>
    </div>
</fieldset>

</form>
</div>
<div class="bbm-modal__bottombar">
    <a href="#" class="bbm-button cancel">Close</a>
    <a href="#" class="bbm-button ok">OK</a>
</div>